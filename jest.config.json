{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "moduleFileExtensions": ["ts", "js"],
  "testMatch": ["**/*.test.ts"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@common/(.*)$": "<rootDir>/src/common/$1",
    "^@entities$": "<rootDir>/src/entities/index.ts",
    "^@rules$": "<rootDir>/src/rules/index.ts",
    "^@engine$": "<rootDir>/src/engine/index.ts"
  }
}
